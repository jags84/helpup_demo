.container
  .row
    %h2.text-center
      = @album.title
  .row.new-album-section
    .col-12.text-right
      %button.btn.btn-primary{:type => "button","data-toggle" => "modal", "data-target" => "#new-pictures-modal"} 
        Upload Pictures
  .row
    .col-12
      - @pictures.each do |picture|
        .col-lg-3.col-md-4.col-sm-6.col-xs-6
          .panel.panel-default
            .panel-body.image-panel
              %img.album-picture.img-responsive.center-block{src: picture.photo.url}

  #new-pictures-modal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4#myModalLabel.modal-title
            New Pictures
        .modal-body     
          = form_tag pictures_path, multipart: true, :class => 'dropzone' do
            .fallback
              = file_field_tag :photo    

        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} 
            Close

  .row
    = will_paginate @pictures
