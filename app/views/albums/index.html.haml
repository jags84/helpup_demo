.container
  .row.new-album-section
    - if @albums.count > 0
      .col-lg-12.col-md-12.col-sm-12.col-xs-12.text-right
        %button.btn.btn-primary{:type => "button","data-toggle" => "modal", "data-target" => "#new-album-modal"} 
          New Album
    - else
      .col-lg-12.col-md-12.col-sm-12.col-xs-12
        .alert.alert-warning.alert-dismissible{:role => "alert"}
          %strong
            You don't have any albums yet!, start by creating one
          %span
            %button.btn.btn-primary{:type => "button","data-toggle" => "modal", "data-target" => "#new-album-modal"} 
              New Album
  .row
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      - @albums.each do |album|
        .col-lg-3.col-md-3.col-sm-4.col-xs-6
          .panel.panel-default
            .panel-body.image-panel
              %img.img-responsive{src: album.album_cover}
            .panel-footer
              %a{href: album_path(album.id)}
                = album.title
  .row
    = will_paginate @pictures
  / Album Modal
  = render :partial => "/shared/album_modal"
