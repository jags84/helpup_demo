.container
  .row.new-album-section
    .col-12.text-right
      %button.btn.btn-primary{:type => "button","data-toggle" => "modal", "data-target" => "#new-album-modal"} 
        New Album
  .row
    .col-12
      - @albums.each do |album|
        .col-lg-3.col-md-4.col-sm-6.col-xs-6
          .panel.panel-default
            .panel-body
              %img.empty-folder{src: asset_path("empty_album.png")}
            .panel-footer
              %a{href: album_path(album.id)}
                =album.title

  #new-album-modal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4#myModalLabel.modal-title
            New Album
        .modal-body
          %form
            .form-group
              %label{:for => "album-title"} Album Title:
              %input#album-title.form-control{:type => "text"}
            .form-group
              .row
                %label
                  Privacy
              .radio
                %label
                  %input.privacy-type{:name => "privacy", :type => "radio", value: "true", "checked": "checked"}>
                  Private
              .radio
                %label
                  %input.privacy-type{:name => "privacy", :type => "radio", value: "false"}>
                  Public
              
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} 
            Close
          %button.btn.btn-primary.create-album{:type => "button"} 
            Create Album


