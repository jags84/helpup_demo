#new-album-modal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1",'data-privacy'=> "#{@album ? @album.is_private? : true}", "data-id" => "#{@album ? @album.id : ''}"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title
          = @album ? "Edit Album" : "New Album"
      .modal-body
        %form
          .form-group
            %label{:for => "album-title"} Album Title:
            %input#album-title.form-control{:type => "text", value: "#{@album ? @album.title : ''}"}
          .form-group
            %label
              Privacy
            .radio
              %label
                %input.privacy-type#private-radio-button{:name => "privacy", :type => "radio", value: "true"}>
                Private
            .radio
              %label
                %input.privacy-type#public-radio-button{:name => "privacy", :type => "radio", value: "false"}>
                Public
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} 
          Close
        - if @album
          %button.btn.btn-primary.update-album{:type => "button"} 
            Update Album
        - else
          %button.btn.btn-primary.create-album{:type => "button"} 
            Create Album
